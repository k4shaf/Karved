<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
  <meta name="generator" content="Jekyll v4.1.1">
  <link rel="icon" href="/images/favicon.jpg">
  <title>KɅRVED - Home Decor and Furniture</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

  <style>
    .card-img-top {
      /* height: 225px; */
      object-fit: cover;
    }

    .bd-placeholder-img {
      font-size: 1.125rem;
      text-anchor: middle;
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
      user-select: none;
    }

    @media (min-width: 768px) {
      .bd-placeholder-img-lg {
        font-size: 3.5rem;
      }
    }
  </style>
  <link href="/styles/album.css" rel="stylesheet">
</head>

<body>
  <header>
    <div class="collapse customcolor" id="navbarHeader">
      <div class="container">
        <div class="row">
          <div class="col-sm-8 col-md-7 py-4">
            <h4 class="text-white">:D</h4>
          </div>
        </div>
      </div>
    </div>
    <div class="navbar navbar-dark bg-dark shadow-sm customcolor">
      <div class="container d-flex justify-content-between">
        <a href="/" class="navbar-brand d-flex align-items-center">
          <h4>KɅRVED</h4>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarHeader"
          aria-controls="navbarHeader" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      </div>
    </div>
  </header>

  <main role="main">

    <section class="jumbotron text-center">
      <div class="container">
        <h1><%= category.charAt(0).toUpperCase() + category.slice(1) %></h1>
        <p class="lead">Discover our exceptional collection of <%= category %></p>
        <p>
          <a href="/categories" class="btn btn-dark my-2">Back to Categories</a>
        </p>
      </div>
    </section>

    <div class="album py-5 bg-light">
      <div class="container">

        <div class="row">

          <% products.forEach(product => { %>    
            <div class="col-md-4 d-flex">
              <div class="card mb-4 shadow-sm flex-fill">
                <img src="<%= product.imageLink %>" class="card-img-top" alt="<%= product.name %>">
                <div class="card-body">
                  <h5 class="card-title"><%= product.name %></h5>
                  <p class="card-text"><%= product.description %></p>
                  <h5 class="card-title">$<%= (product.price / 100).toFixed(2) %></h5>
                </div>
              </div>
            </div>
          <% }) %>

        </div>
      </div>
    </div>
  </main>

  <footer class="text-muted">
    <div class="container">
      <p>Email us at <a
          href="https://mail.google.com/mail/?view=cm&fs=1&to=karvedco@gmail.com&su=Inquiry&body=Hello%20Karved%20Co,">karvedco@gmail.com</a><br>or
        contact us on our Instagram page
        <a href="https://www.instagram.com/karved.co/">Karved</a>.
      </p>
      <p class="float-right">
        <a href="#">Back to top</a>
      </p>
      <br>
      <p>&copy; KɅRVED</p>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>

</body>

</html>